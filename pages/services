    <script>
        // Mobile menu toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            if (menu) {
                menu.classList.toggle('hidden');
            }
        }

        // Smooth scrolling to sections
        function scrollToSection(sectionId) {
            const element = document.getElementById(sectionId);
            if (element) {
                element.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        }

        // Machine Learning Demo
        function updateMLDemo() {
            const usecaseElement = document.getElementById('ml-usecase');
            const inputElement = document.getElementById('ml-input');
            
            if (!usecaseElement || !inputElement) {
                return; // Exit if elements don't exist
            }
            
            const usecase = usecaseElement.value;
            
            const sampleData = {
                'fraud-detection': 'Transaction: $2,500, Location: New York, Time: 2:30 AM, Card: *1234',
                'customer-churn': 'Customer: Premium plan, Usage: 20% decline, Support tickets: 3',
                'demand-forecasting': 'Product: Laptop Model X, Season: Q4, Historical sales: 1,200 units',
                'quality-control': 'Product batch: #A1234, Temperature: 85C, Pressure: 2.1 bar'
            };
            
            inputElement.placeholder = sampleData[usecase] || 'Enter sample data...';
        }

        function runMLDemo() {
            const inputElement = document.getElementById('ml-input');
            const resultsElement = document.getElementById('ml-results');
            const accuracyElement = document.getElementById('ml-accuracy');
            const confidenceElement = document.getElementById('ml-confidence');
            
            if (!inputElement || !resultsElement || !accuracyElement || !confidenceElement) {
                return; // Exit if elements don't exist
            }
            
            const input = inputElement.value;
            if (input.trim()) {
                // Simulate processing
                setTimeout(() => {
                    resultsElement.classList.remove('hidden');
                    
                    // Randomize results for demo
                    const accuracy = (Math.random() * 10 + 90).toFixed(1);
                    const confidence = (Math.random() * 15 + 80).toFixed(1);
                    
                    accuracyElement.textContent = accuracy + '%';
                    confidenceElement.textContent = confidence + '%';
                    
                    const predictions = [
                        'High probability of positive outcome',
                        'Moderate risk detected',
                        'Optimal conditions identified',
                        'Anomaly pattern found'
                    ];
                    
                    document.getElementById('ml-prediction').textContent = 
                        predictions[Math.floor(Math.random() * predictions.length)];
                }, 1500);
            }
        }

        // NLP Demo
        function runNLPDemo() {
            const inputElement = document.getElementById('nlp-input');
            const typeElement = document.getElementById('nlp-type');
            const resultsElement = document.getElementById('nlp-results');
            const outputElement = document.getElementById('nlp-output');
            
            if (!inputElement || !typeElement || !resultsElement || !outputElement) {
                return; // Exit if elements don't exist
            }
            
            const input = inputElement.value;
            const type = typeElement.value;
            
            if (input.trim()) {
                setTimeout(() => {
                    resultsElement.classList.remove('hidden');
                    
                    let results = '';
                    
                    switch(type) {
                        case 'sentiment':
                            results = `
                                <div class="bg-success-50 p-4 rounded-lg">
                                    <div class="font-semibold text-success-600 mb-2">Sentiment: Positive (87%)</div>
                                    <div class="text-sm text-success-700">
                                        <strong>Positive aspects:</strong> "love", "exceptional", "satisfied", "recommend"<br>
                                        <strong>Negative aspects:</strong> "packaging could be improved"
                                    </div>
                                </div>
                            `;
                            break;
                        case 'entities':
                            results = `
                                <div class="space-y-2">
                                    <div class="bg-secondary-50 p-3 rounded">
                                        <strong>Product:</strong> "this product"
                                    </div>
                                    <div class="bg-secondary-50 p-3 rounded">
                                        <strong>Service:</strong> "customer service"
                                    </div>
                                    <div class="bg-secondary-50 p-3 rounded">
                                        <strong>Feature:</strong> "delivery", "packaging"
                                    </div>
                                </div>
                            `;
                            break;
                        case 'summary':
                            results = `
                                <div class="bg-accent-50 p-4 rounded-lg">
                                    <div class="font-semibold text-accent-600 mb-2">Summary:</div>
                                    <div class="text-sm text-accent-700">
                                        Customer expresses high satisfaction with product and service quality, 
                                        particularly praising fast delivery. Minor improvement suggested for packaging.
                                    </div>
                                </div>
                            `;
                            break;
                        case 'keywords':
                            results = `
                                <div class="flex flex-wrap gap-2">
                                    <span class="bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm">product</span>
                                    <span class="bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm">customer service</span>
                                    <span class="bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm">delivery</span>
                                    <span class="bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm">satisfied</span>
                                    <span class="bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm">recommend</span>
                                </div>
                            `;
                            break;
                    }
                    
                    outputElement.innerHTML = results;
                }, 1000);
            }
        }

        // Predictive Analytics Demo
        function updatePredictiveDemo() {
            // Update chart based on industry and period selection
            // In a real implementation, this would update the SVG chart
            console.log('Updating predictive demo...');
        }

        // ROI Calculator
        function openROICalculator() {
            document.getElementById('roi-modal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
            updateROICalculation();
        }

        function closeROICalculator() {
            document.getElementById('roi-modal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function updateROICalculation() {
            const industry = document.getElementById('roi-industry')?.value || 'retail';
            const size = document.getElementById('roi-size')?.value || 'medium';
            const revenue = parseFloat(document.getElementById('roi-revenue')?.value || 10000000);
            const hours = parseFloat(document.getElementById('roi-hours')?.value || 40);
            const solution = document.getElementById('roi-solution')?.value || 'ml';
            
            // Calculate ROI based on inputs
            const baseMultiplier = {
                'small': 0.5,
                'medium': 1.0,
                'large': 1.5
            }[size];
            
            const industryMultiplier = {
                'retail': 1.2,
                'finance': 1.5,
                'healthcare': 1.3,
                'manufacturing': 1.4,
                'technology': 1.1
            }[industry];
            
            const solutionMultiplier = {
                'ml': 1.2,
                'nlp': 1.0,
                'predictive': 1.3,
                'automation': 1.4
            }[solution];
            
            const annualSavings = Math.round(revenue * 0.15 * baseMultiplier * industryMultiplier * solutionMultiplier);
            const implementationCost = Math.round(annualSavings * 0.3);
            const roi = Math.round((annualSavings / implementationCost) * 100);
            const breakeven = Math.round((implementationCost / annualSavings) * 12 * 10) / 10;
            const efficiency = Math.round(60 + (Math.random() * 30));
            
            // Update display
            document.getElementById('roi-percentage').textContent = roi + '%';
            document.getElementById('roi-savings').textContent = '$' + annualSavings.toLocaleString();
            document.getElementById('roi-cost').textContent = '$' + implementationCost.toLocaleString();
            document.getElementById('roi-breakeven').textContent = breakeven + ' months';
            document.getElementById('roi-efficiency').textContent = efficiency + '%';
        }

        // Close modals when clicking outside
        document.getElementById('roi-modal')?.addEventListener('click', function(e) {
            if (e.target === this) {
                closeROICalculator();
            }
        });

        // Initialize demos
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, initializing demos...');
            
            // Only run updateMLDemo if the ML elements exist
            if (document.getElementById('ml-usecase') && document.getElementById('ml-input')) {
                console.log('ML demo elements found, initializing...');
                updateMLDemo();
            } else {
                console.log('ML demo elements not found, skipping...');
            }
            
            // Only run updateROICalculation if the ROI modal exists
            if (document.getElementById('roi-modal')) {
                console.log('ROI modal found, initializing...');
                updateROICalculation();
            } else {
                console.log('ROI modal not found, skipping...');
            }
            
            console.log('Demo initialization complete');
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
